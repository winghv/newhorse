{
  "name": "newhorse",
  "version": "1.0.0",
  "private": true,
  "description": "AI Agent Development Platform based on Claude Agent SDK",
  "workspaces": [
    "apps/web"
  ],
  "scripts": {
    "dev": "npm run ensure:env && npm run ensure:venv && concurrently --raw \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "node scripts/run-api.js",
    "dev:web": "node scripts/run-web.js",
    "ensure:env": "node scripts/setup-env.js",
    "ensure:venv": "node scripts/setup-venv.js",
    "setup": "npm install",
    "doctor": "node scripts/doctor.js",
    "test": "npm run test:api && npm run test:web",
    "test:api": "cd apps/api && python -m pytest",
    "test:api:cov": "cd apps/api && python -m pytest --cov=app --cov-report=term-missing",
    "test:api:v": "cd apps/api && python -m pytest -v",
    "test:web": "cd apps/web && npx vitest run",
    "test:web:watch": "cd apps/web && npx vitest"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "playwright": "^1.58.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
